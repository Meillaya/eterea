{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Eterea",
  "version": "0.1.0",
  "identifier": "com.eterea.app",
  "build": {
    "beforeDevCommand": { "script": "npx vite dev", "cwd": "../src/frontend" },
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": { "script": "npx vite build", "cwd": "../src/frontend" },
    "frontendDist": "../src/frontend/build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Eterea",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {}
}

